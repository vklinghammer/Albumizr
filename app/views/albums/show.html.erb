<div class="row">
  <div class="span3 offset3">
    <%= image_tag @album.cover(:medium)%>
  </div>
  <div class="span3">
    <h1><%= @album.artist %></h1>
    <h2><%= @album.title %> (<%= @album.year %>)</h2>
    <p>
      <%= link_to "Edit album", edit_album_path(@album), class: "btn btn-small" %>
      <%= link_to "Delete album", @album, class: "btn btn-small btn-danger",
          method: :delete %>
    </p>
  </div>
</div>